            var arreglo = [];

            for (var i = 0; i < 5; i++)
            {
                arreglo[i] = Number(prompt('Ingrese el valor para el arreglo ['+i+']: '));                    
            }  
            for (var i = 0; i < 5; i++) 
            {
                document.write('El valor del arreglo ['+i+'] es: '+arreglo[i]);
            }  
            for (var i = 4; i >= 0; i--)
            {
                document.write('El valor del arreglo ['+i+'] es: '+arreglo[i]);   
            } 
            
        </script>
