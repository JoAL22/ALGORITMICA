        <title>TODO supply a title</title>
        <meta charset="UTF-8">
        <script>
             function Promedio( array, indice)
    {
        var suma;
        if (indice==0)
        {
            return array[indice];    
        }
        else
        {
            suma = array[indice] + Promedio(array, indice-1);
        }
        return suma;
    }
       var a=Number(prompt("cuantos elementos tiene el array"));
       var array = [a];
       
       document.write("Escriba los elementos del arreglo: ");
       //Lectura de datos es iterativa
       for (var i=0; i<a; i++)
       {
           
            array[i] = Number(prompt("Digitalize el primer numero: "));    
       }
       document.write("El promedio de los elementos del arreglo es: "+Promedio(array, array.length -1)/array.length);
       </script>
